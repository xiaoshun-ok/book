.navTabBox {
  width: 100vw;
  color: #999;
}
.navTabBox .click {
    color: #333;
}
.navTabBox .longTab {
    width: 100%;
}
.navTabBox .longTab .longItem {
      width: 20vw;
      height: 90rpx;
      display: inline-block;
      line-height: 90rpx;
      text-align: center;
}
.navTabBox .longTab .underlineBox {
      height: 3px;
      width: 20%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-align-content: center;
              align-content: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-transition: .5s;
      transition: .5s;
}
.navTabBox .longTab .underlineBox .underline {
        width: 84rpx;
        height: 4px;
        background-color: white;
}
.navTabBox .shortTab {
    width: 100%;
}
.navTabBox .shortTab .navTab {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 100%;
      height: 90rpx;
      position: relative;
}
